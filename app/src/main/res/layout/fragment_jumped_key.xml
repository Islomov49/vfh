<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.eng.iso.sharipova.Fragments.ExerciseFragments.ComWordsFillWriteFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvContition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scan the text below and click these words and word combinations."
                android:textSize="16dp"
                android:textColor="@color/glavniy_black"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/firstkeys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:textColor="@color/glavniy_black"
                android:text=""
                android:textStyle="italic" />
            <TextView
                android:id="@+id/firstFill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_margin="16dp"
                android:textColor="@color/glavniy_black"/>
            <TextView
                android:id="@+id/secondKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:textColor="@color/glavniy_black"
                android:text=""
                android:textStyle="italic" />
            <TextView
                android:id="@+id/secondFill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_margin="16dp"
                android:textColor="@color/glavniy_black"/>
            <TextView
                android:id="@+id/thirtKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:textColor="@color/glavniy_black"
                android:text=""
                android:textStyle="italic" />
            <TextView
                android:id="@+id/thirtFill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_margin="16dp"
                android:textColor="@color/glavniy_black"/>
            <TextView
                android:id="@+id/fourKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:textColor="@color/glavniy_black"
                android:text=""
                android:textStyle="italic" />
            <TextView
                android:id="@+id/fourFill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_margin="16dp"
                android:textColor="@color/glavniy_black"/>
            <TextView
                android:id="@+id/fiveKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:textSize="16dp"
                android:textColor="@color/glavniy_black"
                android:text=""
                android:textStyle="italic" />
            <TextView
                android:id="@+id/fiveFill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_margin="16dp"
                android:textColor="@color/glavniy_black"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
